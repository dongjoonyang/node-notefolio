<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('head.ejs') %>
    <script src="/admin/js/images.js"></script>
</head>
<body>
    <div class="wrap">
        <%-include('nav.ejs') %>
        
        <header>
            <div class="toolbar">
                <%-include('menu.ejs') %>
                <%-include('logout.ejs') %>
            </div>
        </header>
        
        <main>
            <div class="content">
                <div class="images">
                    <div class="card images__area">
                        <h1>업로드 이미지</h1>
                        <form id="delForm" action="/admin/images/del" method="post">
                            <% 
                                if(imgFile.length == 0) {
                            %>
                                <strong>데이터가 없습니다.</strong>
                            <% } else { %>
                            <div class="images__mng">
                                <label><input type="checkbox" name="allChk">전체선택</label>
                                <button type="button" id="delBtn" class="images__del--btn">삭제</button>
                            </div> 

                            <ul class="images__list">
                                <% 
                                    for(let i = 0; i < imgFile.length; i++) {
                                    let data = imgFile[i]; 
                                %>
                                    <li class="images__list--item">
                                        <label>
                                            <input type="checkbox" name="image" value="<%= data %>">
                                            <img src="/uploads/<%= data %>">
                                        </label>
                                        <span><%= data %></span>
                                    </li>
                                <% } %>
                            </ul>

                            <% } %>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>